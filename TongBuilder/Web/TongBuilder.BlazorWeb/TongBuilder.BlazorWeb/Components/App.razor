@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/Server") || HttpContext.Request.Path.StartsWithSegments("/client")
        ? null
        : InteractiveAuto;
}